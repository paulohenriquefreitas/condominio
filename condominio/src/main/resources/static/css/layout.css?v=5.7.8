}
.tablets.portrait a.rotate .landscape
{
	opacity: 0.3;
}
.tablets.portrait a.rotate:hover .landscape
{
	opacity: 0.5;
}

a.popout
{
	border-bottom: 1px solid rgba( 255, 255, 255, 0.5 );
	text-decoration: none;
	text-align: center;
	line-height: 20px;
	display: block;
