{
	position: absolute;

	-webkit-transform: translateX( -100px );
	-moz-transform: translateX( -100px );
	-ms-transform: translateX( -100px );
	transform: translateX( -100px );

	clip: rect(0,0,0,0);

}
#license .price,
#license label .fa
{
	font-size: 20px;
	line-height: 1;
	margin-top: -10px;
	position: absolute;
