	padding: 100px 0 160px 0;
	position: relative;
}

html.mm-opened #page
{
	overflow: hidden;
}
body.header #page
{
	background-position: calc( 50% + 730px ) -750px;
}
.wrapper
{
	box-sizing: border-box;
	width: 80%;
	max-width: 900px;
	margin: 0 auto;
}
.wrapper.reversed
{
	color: #555;
	padding: 75px 0;
	position: relative;
}
.wrapper.reversed:last-child
{
	padding-bottom: 160px;
	margin-bottom: -160px;
}

.wrapper.reversed:after
{
	background: rgba( 255, 255, 255, 0.95 );
	content: '';
	display: block;
	position: absolute;
	left: -100%;
	left: calc( 0px - 50vw + 50%);
	right: -100%;
	right: calc( 0px - 50vw + 50%);
	top: 0;
	bottom: 0;
	z-index: -1;
}
.wrapper.reversed h4,
.wrapper.reversed h5,
.wrapper.reversed h6
{
	font-weight: 100;
	font-size: 30px;
	color: #4bb5ef;
}
.wrapper.reversed a
{
	color: #4bb5ef;
}
.wrapper.reversed a.btn
{
	border: 1px solid #4bb5ef;
}
.wrapper.reversed a.btn span
{
	color: inherit;
}

.wrapper.header
{
	padding-bottom: 150px;
}

.ad-wrapper
{
	background: #4bb5ef;
	opacity: 0.95;
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 2;
}
.ad-wrapper > div
{
	border-top: 1px solid rgba( 255, 255, 255, 0.5 );
	width: 900px;
	padding: 9px 20px;
	margin: auto;
}

.demo-link
{
	display: none !important;
}


